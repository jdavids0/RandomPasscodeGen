@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex justify-content-center mt-5">
    <div>
        <div>
            <h4>Random Passcode (passcode @ViewBag.CodeNumber)</h4>
        </div>
        <div class="d-flex justify-content-center border border-dark mb-2">
            <h1>@ViewBag.GeneratedCode</h1>
        </div>
        <div>
            <form action="/" method="post">
                <input type="hidden">
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-info btn-outline-dark">Generate</button>
                </div>

            </form>
        </div>
    
    </div>
</div>